$(function(){function t(e,i,o){var r="";if(o){var t=new Date;t.setTime(t.getTime()+60*o*60*1e3),r="; expires="+t.toUTCString()}document.cookie=e+"="+(i||"")+r+"; path=/"}$(window).scroll(function(){if(500<$(window).scrollTop()){$("#slidebox").animate({right:"0px"},500);var e=$("#slidebox").attr("data-alert-corner-id"),i=$("#slidebox").attr("data-alert-corner-caping"),o=$.cookie("alertCorner[displayed]");if(1==i){if(null==o)o=e;else{var r=o.split(",");-1===jQuery.inArray(e,r)&&(o+=","+e)}t("alertCorner[displayed]",o,24)}t("alertCorner[delivered]",1,2)}else $("#slidebox").stop(!0).animate({right:"-430px"},500)}),$(window).scroll(function(){var e=$("#stop-alert-corner").offset().top-$(window).height();$(window).scrollTop()>e&&$("#slidebox").stop(!0).animate({right:"-430px"},500)}),$("#slidebox .close").bind("click",function(){$(this).parent().remove()})});